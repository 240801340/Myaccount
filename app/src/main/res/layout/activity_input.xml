<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_input_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textSize="20dp"
            android:text="日期" />

<!--        <EditText-->
<!--            android:id="@+id/edit_input_date"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:ems="10"-->
<!--            android:text="1999-11-16" />-->
        <Button
            android:id="@+id/inputDate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_input_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textSize="20dp"
            android:text="收入/支出" />


        <Button
            android:id="@+id/edit_input_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_input_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textSize="20dp"
            android:text="金额" />

        <EditText
            android:id="@+id/edit_input_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_input_payWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textSize="20dp"
            android:text="支付方式" />


        <TextView
            android:id="@+id/edit_input_payWay"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="现金"
            android:textColor="@color/green"
            android:textSize="20dp" />
        <Spinner android:id="@+id/Spinner_payWay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:width="100dp">
            <TextView
                android:id="@+id/view_input_activity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:width="100dp"
                android:textSize="20dp"
                android:text="活动" />
            <Button
                android:id="@+id/input_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_activity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="30dp"
                android:textColor="@color/green"
                android:ems="10"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>